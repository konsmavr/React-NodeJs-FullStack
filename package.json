{
  "name": "fullstack-app-starter",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "shared/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:api dev:web",
    "dev:web": "npm run dev -w apps/web",
    "dev:api": "npm run dev -w apps/api",
    "build": "npm-run-all build:shared build:api build:web",
    "build:web": "npm run build -w apps/web",
    "build:api": "npm run build -w apps/api",
    "build:shared": "npm run build -w shared/types",
    "lint": "npm-run-all lint:*",
    "lint:web": "npm run lint -w apps/web",
    "lint:api": "npm run lint -w apps/api",
    "typecheck": "npm-run-all typecheck:*",
    "typecheck:web": "npm run typecheck -w apps/web",
    "typecheck:api": "npm run typecheck -w apps/api",
    "typecheck:shared": "npm run typecheck -w shared/types",
    "test": "npm-run-all test:*",
    "test:web": "npm run test -w apps/web",
    "test:api": "npm run test -w apps/api",
    "db:generate": "npm run prisma:generate -w apps/api",
    "db:migrate": "npm run prisma:migrate -w apps/api",
    "db:seed": "npm run prisma:seed -w apps/api",
    "docker:up": "docker compose up --build",
    "docker:down": "docker compose down -v"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
